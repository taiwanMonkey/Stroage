@{
    ViewData["Title"] = "新增物料";
}
<h3>新增物料種類</h3>
<form method="post" class="m-5" action="MaterialDeclare/Declare">
    <div class="form-group mb-2">
        <label for="description">物料名稱</label>
        <input name="description" id="description" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label for="type">物料種類</label>
        <select name="type" id="type" class="form-select">
            <option value="SMT">
                SMT
            </option>
            <option value="DIP">
                DIP
            </option>
        </select>
    </div>
    <div class="form-group float-end">
        <input type="submit" class="btn btn-primary" value="新增"/>
    </div>
</form>
