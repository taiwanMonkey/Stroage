@{
    ViewData["Title"] = "新增倉庫";
}
<h3>新增倉庫</h3>
<form method="post" class="m-5 m" action="StorehouseDeclare/Declare">
    <div class="form-group mb-2">
        <label for="name">倉庫代號</label>
        <input type="text" name="name" id="name" class="form-control" maxlength="20" placeholder="最多20個字" required />
    </div>
    <div class="form-group mb-2">
        <label for="capacity">庫位量</label>
        <input type="number" name="capacity" id="capacity" class="form-control" min="1" max="500" 
                placeholder="1~500"  oninput="limitCapacity()" required />

    </div>
    <div class="form-group float-end">
        <input type="submit" class="btn btn-primary" value="新增"/>
    </div>
</form>

@section Scripts{
    <script>
        function limitCapacity(){
            let cpt = document.getElementById('capacity');
            let num = parseInt(cpt.value);
            if(isNaN(num))
                cpt.value = cpt.textContent = '';
            else if(num < 0)
                cpt.value = 0;
            else if(num > 500)
                cpt.value = 500;
        }
    </script>
}